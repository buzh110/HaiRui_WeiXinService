@model WS.ViewModel.OfficialAccounts_AreaLimit_ViewModel

@{
    ViewBag.Title = "Edit_Area";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <br />
    <div class="panel panel-info">
        <div class="panel-heading">编辑活动区域信息（LBS）</div>
        <div class="panel-body">
            @using (Html.BeginForm("Edit_Area", "OfficialAccounts", new { Area = "Admin" }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, null, new { @class = "alert alert-danger alert-dismissable" })

                @Html.HiddenFor(model => model.AccountID)

                
                
                
                <div class="form-group">
                    @Html.LabelFor(model => model.AreaLevel, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.DropDownListFor(model => model.AreaLevel, ViewBag.LevelList as SelectList, new { @class = "form-control" })


                        @Html.ValidationMessageFor(model => model.AreaLevel)

                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.AreaLimit, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.AreaLimit, new { @class = "form-control", placeholder = "中国" })
                        @Html.ValidationMessageFor(model => model.AreaLimit)
                        <p class="help-block">填写格式，国家：如“中国”、省份：如“山东”、城市：如“青岛”。</p>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-8">
                        <button type="submit" class="btn btn-default">提交</button>
                    </div>
                </div>
            }
        </div>
    </div>





@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
