@model WS.ViewModel.OfficialAccounts_ViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<br />
<ol class="breadcrumb">
    <li><a href="#"><span class="glyphicon glyphicon-home"></span>&nbsp;&nbsp;管理中心</a></li>
    <li><a href="~/Admin/OfficialAccounts/MyList"><span class="glyphicon glyphicon-list"></span>&nbsp;&nbsp;微信公众号管理</a></li>
    <li class="active"><span class="glyphicon glyphicon-plus"></span>&nbsp;&nbsp;修改微信公众号</li>
</ol>

<div class="panel panel-info">
    <div class="panel-heading">修改微信公众号</div>
    <div class="panel-body">
        @using (Html.BeginForm("Edit", "OfficialAccounts", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, null, new { @class = "alert alert-danger alert-dismissable" })


            @Html.HiddenFor(model => model.AccountID)
            @Html.HiddenFor(model => model.IsConfigure)
            @Html.HiddenFor(model => model.CreateTime)
            @Html.HiddenFor(model => model.OriginalID)
            @Html.HiddenFor(model => model.WeiXinNumber)
            @Html.HiddenFor(model => model.QRCodeBgImg)
            @Html.HiddenFor(model => model.AppID)
            @Html.HiddenFor(model => model.AppSecret)

            @Html.HiddenFor(model => model.UserID)
            <div class="form-group">
                @Html.LabelFor(model => model.WeiXinName, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.WeiXinName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.WeiXinName)
                </div>

            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.OriginalID, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.OriginalID, new { @class = "form-control", disabled = "disabled" })
                    @Html.ValidationMessageFor(model => model.OriginalID)
                </div>

            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.WeiXinNumber, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.WeiXinNumber, new { @class = "form-control", disabled = "disabled" })
                    @Html.ValidationMessageFor(model => model.WeiXinNumber)
                </div>

            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.AppID, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.AppID, new { @class = "form-control", disabled = "disabled" })
                    @Html.ValidationMessageFor(model => model.AppID)
                </div>

            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.AppSecret, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.AppSecret, new { @class = "form-control", disabled = "disabled" })
                    @Html.ValidationMessageFor(model => model.AppSecret)


                </div>

            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.SubscribeAddScore, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.SubscribeAddScore, new { @class = "form-control", placeholder = "SubscribeAddScore", type = "number" })
                    <p class="help-block">海报分享后，当别人关注一次增加的积分.</p>
                    @Html.ValidationMessageFor(model => model.SubscribeAddScore)

                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.UnSubscribeReduceScore, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.UnSubscribeReduceScore, new { @class = "form-control", placeholder = "UnSubscribeReduceScore", type = "number" })
                    <p class="help-block">当粉丝取消关注后减少的积分.</p>

                    @Html.ValidationMessageFor(model => model.UnSubscribeReduceScore)

                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.SubscribeWelcome, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextAreaFor(model => model.SubscribeWelcome, new { @class = "form-control", placeholder = "SubscribeWelcome" })
                    @Html.ValidationMessageFor(model => model.SubscribeWelcome)

                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-8">
                    <button type="submit" class="btn btn-default">提交</button>
                </div>
            </div>
        }

    </div>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
